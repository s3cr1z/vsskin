{
    "zencoder.mcpServers": {
        "semgrep": {
            "command": "uvx",
            "args": [
                "semgrep-mcp"
            ],
            "env": {
                "SEMGREP_APP_TOKEN": "<token>"
            }
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_TOKEN>"
            }
        }
    },
    "zencoder.enableRepoIndexing": true
}